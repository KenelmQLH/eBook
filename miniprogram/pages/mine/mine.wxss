.container_v {
  height: 100vh;
  width: 100vw;
  
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;

  padding: 0;
  box-sizing: border-box;
} 

.base {
  width: 90vw;
  display: flex;
  margin-top:20rpx;
  margin-bottom: 20rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  background-color:#dee6e6; /*要删掉*/
}
.info {
  flex: 1;
}
.nickname {
  width: 100%;
  height: 70rpx;
  margin-bottom: 10rpx;
  background: #dee6e6;
}
.time {
  width: 100%;
  height: 40rpx;
  background: #dee6e6;
}



