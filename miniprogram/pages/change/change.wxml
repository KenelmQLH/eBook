<!--pages/login/login.wxml-->

<form class="formCss" bindsubmit="formSubmit">

<view class="section">
  <view class="section__title">昵称</view>
    <input name="nickName" placeholder="请输入昵称"  maxlength="20"  focus="false" class="section__iput"/>
  </view>

  <view class="section">
      <view class="section__title">手机号：</view>
      <input name="phoneNumber" placeholder="请输入手机号"  maxlength="11" focus="false" class="section__iput"/>
  </view>

  <view class="section">
      <view class="section__title">微信号：</view>
      <input name="weixingNumber" placeholder="请输入您的微信号"  maxlength="20" focus="false" class="section__iput"/>
  </view>

  <view class="btn-area">
    <button formType="submit" type="primary" open-type="getUserInfo" bindgetuserinfo='getU'>提交</button>
    <!--open-type="getUserInfo" bindgetuserinfo='getU'-->
  </view>

</form> 